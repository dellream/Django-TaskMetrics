upstream uwsgi_app {
    server unix:/tmp/uwsgi_app.sock;
}

server {
    listen                  8085;
    server_name             www.taskmetrics.ru taskmetrics.ru;
    error_log               stderr warn;
    access_log              /dev/stdout main;


    location / {
        include             /etc/nginx/uwsgi_params;
        uwsgi_pass          uwsgi_app;
    }

    location /static/ {
        alias /code/static/;
    }

    location /media/ {
        alias /code/media/;
    }
}